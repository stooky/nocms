---
/**
 * EmergencyBanner Component
 *
 * Displays a prominent emergency service banner with phone number.
 * Critical for HVAC/Plumbing - drives phone calls during emergencies.
 *
 * Usage:
 *   <EmergencyBanner phone="(555) 123-4567" />
 *   <EmergencyBanner headline="No Heat?" variant="inline" />
 */

interface Props {
  phone: string;
  headline?: string;
  subheadline?: string;
  variant?: 'sticky' | 'inline';
  colorScheme?: 'urgent' | 'brand';
}

const {
  phone,
  headline = '24/7 Emergency Service',
  subheadline,
  variant = 'sticky',
  colorScheme = 'urgent',
} = Astro.props;

// Format phone for tel: link
const phoneDigits = phone.replace(/\D/g, '');

// Color schemes
const colors = {
  urgent: {
    bg: 'bg-red-600',
    text: 'text-white',
    button: 'bg-white text-red-600 hover:bg-red-50',
    icon: 'text-red-200',
  },
  brand: {
    bg: 'bg-primary-600',
    text: 'text-white',
    button: 'bg-white text-primary-600 hover:bg-primary-50',
    icon: 'text-primary-200',
  },
};

const scheme = colors[colorScheme];
---

{variant === 'sticky' ? (
  <div class={`${scheme.bg} ${scheme.text} py-2 sm:py-3`}>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col items-center justify-between gap-2 sm:flex-row sm:gap-4">
        <div class="flex items-center gap-2 text-center sm:text-left">
          <!-- Emergency Icon -->
          <svg class={`hidden h-5 w-5 sm:block ${scheme.icon}`} fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
          <span class="font-semibold">{headline}</span>
          {subheadline && (
            <span class="hidden text-sm opacity-90 lg:inline">â€¢ {subheadline}</span>
          )}
        </div>
        <a
          href={`tel:${phoneDigits}`}
          class={`inline-flex items-center gap-2 rounded-full px-4 py-1.5 text-sm font-bold shadow-sm transition-colors ${scheme.button}`}
        >
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          <span>Call {phone}</span>
        </a>
      </div>
    </div>
  </div>
) : (
  <div class={`${scheme.bg} ${scheme.text} rounded-xl p-6 text-center sm:p-8`}>
    <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-white/10">
      <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
    </div>
    <h2 class="mt-4 text-2xl font-bold sm:text-3xl">{headline}</h2>
    {subheadline && (
      <p class="mt-2 text-lg opacity-90">{subheadline}</p>
    )}
    <a
      href={`tel:${phoneDigits}`}
      class={`mt-6 inline-flex items-center gap-2 rounded-lg px-8 py-4 text-lg font-bold shadow-lg transition-colors ${scheme.button}`}
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
      </svg>
      <span>Call Now: {phone}</span>
    </a>
  </div>
)}
