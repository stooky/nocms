---
/**
 * FinancingBanner Component
 *
 * Promotes financing options for big-ticket items.
 * Critical for system replacements (AC, furnace, water heater).
 *
 * Usage:
 *   <FinancingBanner headline="0% APR Available" />
 */

interface Props {
  headline?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: 'banner' | 'card';
}

const {
  headline = '0% Financing Available',
  description = "Don't let budget stop you from comfort. Easy approval, flexible payments.",
  ctaText = 'Learn More',
  ctaHref = '/financing',
  variant = 'banner',
} = Astro.props;
---

{variant === 'banner' ? (
  <div class="bg-gradient-to-r from-primary-600 to-primary-700 py-8 sm:py-10">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col items-center justify-between gap-4 text-center sm:flex-row sm:text-left">
        <div>
          <div class="flex items-center justify-center gap-2 sm:justify-start">
            <svg class="h-6 w-6 text-primary-200" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
            </svg>
            <h2 class="text-xl font-bold text-white sm:text-2xl">{headline}</h2>
          </div>
          <p class="mt-1 text-primary-100">{description}</p>
        </div>
        <a
          href={ctaHref}
          class="inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 font-semibold text-primary-600 shadow-sm transition-colors hover:bg-primary-50"
        >
          {ctaText}
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
) : (
  <div class="rounded-xl bg-gradient-to-br from-primary-600 to-primary-700 p-6 text-center sm:p-8">
    <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-white/10">
      <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
      </svg>
    </div>
    <h3 class="mt-4 text-xl font-bold text-white">{headline}</h3>
    <p class="mt-2 text-primary-100">{description}</p>
    <a
      href={ctaHref}
      class="mt-6 inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 font-semibold text-primary-600 shadow-sm transition-colors hover:bg-primary-50"
    >
      {ctaText}
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
    </a>
  </div>
)}
