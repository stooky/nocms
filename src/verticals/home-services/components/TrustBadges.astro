---
/**
 * TrustBadges Component
 *
 * Displays credibility indicators: licensed, insured, ratings, guarantees.
 * Critical for building trust with first-time visitors.
 *
 * Usage:
 *   <TrustBadges badges={[{ label: 'Licensed', icon: 'shield-check' }]} />
 */

interface Badge {
  id: string;
  label: string;
  sublabel?: string;
  icon: string;
  enabled?: boolean;
}

interface Props {
  badges: Badge[];
  variant?: 'horizontal' | 'grid';
  size?: 'sm' | 'md' | 'lg';
}

const {
  badges,
  variant = 'horizontal',
  size = 'md',
} = Astro.props;

// Filter to only enabled badges
const activeBadges = badges.filter(b => b.enabled !== false);

// Icon mapping
const icons: Record<string, string> = {
  'shield-check': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
  'shield': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0-10.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.249-8.25-3.286zm0 13.036h.008v.008H12v-.008z" /></svg>`,
  'award': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9m9 0a3 3 0 013 3h-15a3 3 0 013-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 01-.982-3.172M9.497 14.25a7.454 7.454 0 00.981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 007.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 002.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 012.916.52 6.003 6.003 0 01-5.395 4.972m0 0a6.726 6.726 0 01-2.749 1.35m0 0a6.772 6.772 0 01-3.044 0" /></svg>`,
  'star': `<svg class="h-full w-full" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" /></svg>`,
  'check-circle': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  'user-check': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75l2.25 2.25 4.5-4.5" /></svg>`,
  'dollar-sign': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  'home': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>`,
  'clock': `<svg class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
};

// Size classes
const sizeClasses = {
  sm: {
    icon: 'h-8 w-8',
    label: 'text-xs',
    sublabel: 'text-xs',
    gap: 'gap-3',
  },
  md: {
    icon: 'h-10 w-10',
    label: 'text-sm',
    sublabel: 'text-xs',
    gap: 'gap-4',
  },
  lg: {
    icon: 'h-12 w-12',
    label: 'text-base',
    sublabel: 'text-sm',
    gap: 'gap-6',
  },
};

const sizes = sizeClasses[size];
---

{variant === 'horizontal' ? (
  <div class="overflow-x-auto py-4">
    <div class={`flex items-center justify-center ${sizes.gap} min-w-max`}>
      {activeBadges.map((badge) => (
        <div class="flex items-center gap-2 text-center">
          <div class={`${sizes.icon} flex-shrink-0 text-primary-600`}>
            <Fragment set:html={icons[badge.icon] || icons['check-circle']} />
          </div>
          <div class="text-left">
            <div class={`font-semibold text-gray-900 ${sizes.label}`}>{badge.label}</div>
            {badge.sublabel && (
              <div class={`text-gray-500 ${sizes.sublabel}`}>{badge.sublabel}</div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
) : (
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
    {activeBadges.map((badge) => (
      <div class="flex flex-col items-center text-center p-4">
        <div class={`${sizes.icon} text-primary-600`}>
          <Fragment set:html={icons[badge.icon] || icons['check-circle']} />
        </div>
        <div class={`mt-2 font-semibold text-gray-900 ${sizes.label}`}>{badge.label}</div>
        {badge.sublabel && (
          <div class={`text-gray-500 ${sizes.sublabel}`}>{badge.sublabel}</div>
        )}
      </div>
    ))}
  </div>
)}
