---
/**
 * ReviewsCarousel Component
 *
 * Displays customer reviews in a carousel format.
 * Social proof is critical for service businesses.
 *
 * Usage:
 *   <ReviewsCarousel reviews={reviews} />
 */

interface Review {
  rating: number;
  text: string;
  author: string;
  location?: string;
  source: string;
  date?: string;
}

interface Props {
  reviews: Review[];
  headline?: string;
  showSource?: boolean;
  maxStars?: number;
}

const {
  reviews,
  headline = 'What Our Customers Say',
  showSource = true,
  maxStars = 5,
} = Astro.props;

// Filter to good reviews only
const goodReviews = reviews.filter(r => r.rating >= 4);
---

<section class="py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-center text-2xl font-bold text-gray-900 sm:text-3xl">
      {headline}
    </h2>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {goodReviews.map((review) => (
        <blockquote class="flex flex-col rounded-xl bg-white p-6 shadow-sm ring-1 ring-gray-200">
          <!-- Stars -->
          <div class="flex gap-1">
            {Array.from({ length: maxStars }).map((_, i) => (
              <svg
                class={`h-5 w-5 ${i < review.rating ? 'text-yellow-400' : 'text-gray-200'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Review Text -->
          <p class="mt-4 flex-1 text-gray-700">"{review.text}"</p>

          <!-- Author -->
          <footer class="mt-4 flex items-center justify-between border-t border-gray-100 pt-4">
            <div>
              <cite class="not-italic font-semibold text-gray-900">{review.author}</cite>
              {review.location && (
                <p class="text-sm text-gray-500">{review.location}</p>
              )}
            </div>
            {showSource && (
              <span class="text-xs text-gray-400">via {review.source}</span>
            )}
          </footer>
        </blockquote>
      ))}
    </div>

    <!-- View All Link -->
    <div class="mt-10 text-center">
      <a
        href="#reviews"
        class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
      >
        See All Reviews
        <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
