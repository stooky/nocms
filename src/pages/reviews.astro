---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import TrustBadges from '../components/TrustBadges.astro';
import CTA from '../components/CTA.astro';

// Reviews data
const reviews = [
  {
    quote: "Member Solutions has been an integral part of our success. Their billing services have saved us countless hours and their software is incredibly easy to use.",
    author: "Michael Chen",
    role: "Owner",
    company: "Dragon's Way Martial Arts",
    location: "Philadelphia, PA",
    rating: 5,
    yearsWithUs: 8,
  },
  {
    quote: "The customer service is outstanding. Whenever we have a question, we get a real person who actually knows our account. That personal touch makes all the difference.",
    author: "Sarah Johnson",
    role: "Studio Manager",
    company: "FitLife Gym",
    location: "New York, NY",
    rating: 5,
    yearsWithUs: 5,
  },
  {
    quote: "We switched from another provider and the difference is night and day. Member Solutions handles our billing seamlessly and our collection rate has improved dramatically.",
    author: "David Rodriguez",
    role: "Owner",
    company: "Elite MMA Academy",
    location: "Los Angeles, CA",
    rating: 5,
    yearsWithUs: 12,
  },
  {
    quote: "The lead management features helped us increase our conversion rate by 40%. The automated follow-ups ensure no prospect falls through the cracks.",
    author: "Jennifer Williams",
    role: "Marketing Director",
    company: "Zenith Yoga Studio",
    location: "Austin, TX",
    rating: 5,
    yearsWithUs: 3,
  },
  {
    quote: "As a martial arts school owner, I need to focus on teaching and growing my students. Member Solutions handles all the business stuff so I can do what I love.",
    author: "Robert Kim",
    role: "Master Instructor",
    company: "Kim's Taekwondo",
    location: "Chicago, IL",
    rating: 5,
    yearsWithUs: 15,
  },
  {
    quote: "The mobile app has been a game-changer for our members. They can book classes, make payments, and check their progress all from their phone.",
    author: "Amanda Torres",
    role: "Owner",
    company: "CrossFit Summit",
    location: "Denver, CO",
    rating: 5,
    yearsWithUs: 4,
  },
  {
    quote: "We've tried other software but nothing compares to Member Solutions. The integration between billing and member management is seamless.",
    author: "Chris Anderson",
    role: "General Manager",
    company: "Peak Performance Gym",
    location: "Seattle, WA",
    rating: 5,
    yearsWithUs: 7,
  },
  {
    quote: "Their delinquency management program recovered payments we had written off. It more than paid for itself in the first month.",
    author: "Lisa Martinez",
    role: "Owner",
    company: "Martinez BJJ Academy",
    location: "Miami, FL",
    rating: 5,
    yearsWithUs: 6,
  },
];

// Platform ratings
const platformRatings = [
  { platform: 'Google', rating: '4.8', reviews: '500+' },
  { platform: 'Capterra', rating: '4.7', reviews: '200+' },
  { platform: 'G2', rating: '4.6', reviews: '150+' },
];
---

<Layout title="Reviews">
  <!-- Hero -->
  <Hero
    title="Reviews of Our"
    titleHighlight="Martial Arts Software & Billing Services"
    subtitle="See what thousands of studio owners have to say about Member Solutions."
    primaryCta={{ text: "Get Started", href: "/contact" }}
    background="white"
    centered={true}
  />

  <!-- Platform Ratings -->
  <Section background="gray" padding="md">
    <div class="grid gap-8 sm:grid-cols-3">
      {platformRatings.map((item) => (
        <div class="text-center bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <div class="flex items-center justify-center gap-1 mb-2">
            {[...Array(5)].map((_, i) => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-2xl font-bold text-gray-900">{item.rating}/5</p>
          <p class="text-sm text-gray-600">{item.reviews} reviews on {item.platform}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Reviews Grid -->
  <Section
    title="What Our Customers Say"
    titleHighlight=""
    subtitle="Real feedback from real studio owners."
    background="white"
  >
    <div class="grid gap-8 md:grid-cols-2">
      {reviews.map((review) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 flex flex-col">
          <!-- Rating -->
          <div class="flex gap-1 mb-4">
            {[...Array(5)].map((_, i) => (
              <svg
                class={`w-5 h-5 ${i < review.rating ? 'text-yellow-400' : 'text-gray-200'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="flex-grow">
            <svg class="w-8 h-8 text-primary-200 mb-4" fill="currentColor" viewBox="0 0 32 32">
              <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
            </svg>
            <p class="text-gray-700 text-lg leading-relaxed">
              "{review.quote}"
            </p>
          </blockquote>

          <!-- Author -->
          <div class="mt-6 flex items-center gap-4 pt-6 border-t border-gray-100">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
              <span class="text-primary-600 font-semibold text-lg">
                {review.author.charAt(0)}
              </span>
            </div>
            <div class="flex-grow">
              <p class="font-semibold text-gray-900">{review.author}</p>
              <p class="text-sm text-gray-500">
                {review.role}, {review.company}
              </p>
              <p class="text-xs text-gray-400">{review.location}</p>
            </div>
            <div class="text-right">
              <span class="inline-block px-3 py-1 text-xs font-medium text-primary-700 bg-primary-50 rounded-full">
                {review.yearsWithUs}+ years
              </span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- Stats -->
  <TrustBadges
    title="Trusted by membership businesses for 30+ years"
    stats={[
      { value: "5,000+", label: "Studios Served" },
      { value: "98%", label: "Satisfaction Rate" },
      { value: "4.8/5", label: "Average Rating" },
      { value: "10+", label: "Avg Years as Customer" },
    ]}
    background="dark"
  />

  <!-- CTA -->
  <CTA
    title="Ready to Experience the Member Solutions Difference?"
    description="Join thousands of satisfied studio owners who trust us with their business."
    primaryButton={{ text: "Get Started", href: "/contact" }}
    secondaryButton={{ text: "Request Demo", href: "/request-info" }}
    background="white"
  />
</Layout>
