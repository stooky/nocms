---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import IconBox from '../components/IconBox.astro';
import TrustBadges from '../components/TrustBadges.astro';
import CTA from '../components/CTA.astro';

// Company values
const values = [
  {
    title: 'Customer First',
    description: 'Every decision we make starts with how it will benefit our customers. Your success is our success.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>`,
  },
  {
    title: 'Innovation',
    description: 'We continuously improve our technology to give you the best tools for managing your business.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>`,
  },
  {
    title: 'Integrity',
    description: 'We do what we say and say what we do. Honesty and transparency guide every interaction.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
  },
  {
    title: 'Partnership',
    description: 'We view ourselves as an extension of your team, working together toward your goals.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
  },
];

// Team members
const team = [
  {
    name: 'Mary Margaret Bennett',
    role: 'CEO',
    bio: 'Leading Member Solutions with 20+ years of experience in the membership industry.',
  },
  {
    name: 'Michael Brandt',
    role: 'CTO',
    bio: 'Driving technology innovation to deliver the best member management solutions.',
  },
  {
    name: 'Sarah Thompson',
    role: 'VP of Customer Success',
    bio: 'Ensuring every customer achieves their business goals with Member Solutions.',
  },
  {
    name: 'David Chen',
    role: 'VP of Sales',
    bio: 'Helping studios discover how Member Solutions can transform their operations.',
  },
];

// Company milestones
const milestones = [
  { year: '1991', event: 'Member Solutions founded' },
  { year: '1998', event: 'Launched first web-based software' },
  { year: '2005', event: 'Reached 1,000 clients' },
  { year: '2012', event: 'Mobile app released' },
  { year: '2018', event: 'Processed $1 billion in payments' },
  { year: '2023', event: '5,000+ studios served' },
];
---

<Layout title="About Us">
  <!-- Hero -->
  <Hero
    title="About"
    titleHighlight="Member Solutions"
    subtitle="For over 30 years, we've been helping membership-based businesses grow and thrive with our comprehensive billing services and management software."
    primaryCta={{ text: "Get in Touch", href: "/contact" }}
    background="white"
    centered={true}
  />

  <!-- Our Story -->
  <Section
    title="Our Story"
    titleHighlight=""
    subtitle="How we became the trusted partner for membership businesses."
    background="gray"
  >
    <div class="max-w-3xl mx-auto">
      <div class="prose prose-lg mx-auto text-gray-600">
        <p>
          Member Solutions was founded in 1991 with a simple mission: help membership businesses
          succeed by taking the complexity out of billing and member management.
        </p>
        <p>
          What started as a small team serving local martial arts schools has grown into a
          comprehensive platform serving over 5,000 studios across the country. Through it all,
          our commitment to our customers has remained unchanged.
        </p>
        <p>
          Today, we combine powerful technology with dedicated human support to deliver
          solutions that actually work. Our team of billing specialists, software developers,
          and customer success managers all share one goal: your success.
        </p>
      </div>
    </div>
  </Section>

  <!-- Values -->
  <Section
    title="The Values"
    titleHighlight="We Live By"
    subtitle="These principles guide everything we do."
    background="white"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {values.map((value) => (
        <IconBox
          icon={value.icon}
          title={value.title}
          description={value.description}
          variant="centered"
        />
      ))}
    </div>
  </Section>

  <!-- Timeline -->
  <Section
    title="Our Journey"
    titleHighlight=""
    subtitle="Key moments in our 30+ year history."
    background="gray"
  >
    <div class="max-w-3xl mx-auto">
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-primary-200"></div>
        <div class="space-y-12">
          {milestones.map((milestone, index) => (
            <div class={`relative flex items-center ${index % 2 === 0 ? 'justify-start' : 'justify-end'}`}>
              <div class={`w-5/12 ${index % 2 === 0 ? 'text-right pr-8' : 'text-left pl-8 order-1'}`}>
                <div class="bg-white rounded-lg p-6 shadow-lg border border-gray-100">
                  <span class="text-primary-600 font-bold text-lg">{milestone.year}</span>
                  <p class="mt-2 text-gray-600">{milestone.event}</p>
                </div>
              </div>
              <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 rounded-full bg-primary-600 border-4 border-white shadow"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </Section>

  <!-- Team -->
  <Section
    title="Our Team"
    titleHighlight=""
    subtitle="Meet the people behind Member Solutions."
    background="white"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {team.map((member) => (
        <div class="text-center">
          <div class="w-32 h-32 mx-auto rounded-full bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center mb-4">
            <span class="text-primary-600 font-bold text-3xl">
              {member.name.split(' ').map(n => n[0]).join('')}
            </span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">{member.name}</h3>
          <p class="text-primary-600 font-medium">{member.role}</p>
          <p class="mt-2 text-sm text-gray-600">{member.bio}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Stats -->
  <TrustBadges
    title="By the Numbers"
    stats={[
      { value: "30+", label: "Years in Business" },
      { value: "5,000+", label: "Studios Served" },
      { value: "$2B+", label: "Payments Processed" },
      { value: "100+", label: "Team Members" },
    ]}
    background="dark"
  />

  <!-- CTA -->
  <CTA
    title="Ready to Join Our Family?"
    description="See why thousands of studios trust Member Solutions with their business."
    primaryButton={{ text: "Get Started", href: "/contact" }}
    secondaryButton={{ text: "Request Demo", href: "/request-info" }}
    background="white"
  />
</Layout>
