---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import IconBox from '../components/IconBox.astro';
import TrustBadges from '../components/TrustBadges.astro';
import CTA from '../components/CTA.astro';

// Billing features
const billingFeatures = [
  {
    title: 'Automated Payment Processing',
    description: 'Set it and forget it. We process all membership payments automatically on schedule.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>`,
  },
  {
    title: 'Delinquency Management',
    description: 'Our team handles late payments with a proven recovery process that maximizes collections.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
  {
    title: 'Multiple Payment Methods',
    description: 'Accept credit cards, debit cards, and ACH bank transfers for member convenience.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" /></svg>`,
  },
  {
    title: 'Detailed Reporting',
    description: 'Real-time dashboards and comprehensive reports to track your financial performance.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
  },
  {
    title: 'PCI Compliant Security',
    description: 'Your member data is protected with industry-leading security standards.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
  },
  {
    title: 'Dedicated Support Team',
    description: 'US-based billing specialists available to help you and your members.',
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" /></svg>`,
  },
];

// What we handle
const whatWeHandle = [
  'Monthly membership dues collection',
  'Annual and semi-annual payment plans',
  'Failed payment recovery',
  'Account updates and changes',
  'Member payment inquiries',
  'Credit card expiration updates',
];

// Stats
const stats = [
  { value: '98%', label: 'Collection Rate' },
  { value: '30+', label: 'Years Experience' },
  { value: '24/7', label: 'Payment Processing' },
  { value: '5,000+', label: 'Studios Served' },
];
---

<Layout title="Membership Billing Services">
  <!-- Hero -->
  <Hero
    eyebrow="Full-Service Billing"
    title="Billing Services for"
    titleHighlight="Membership Businesses"
    subtitle="We take care of your membership billing, so you don't have to. Proprietary payment technology combined with experienced billing specialists."
    primaryCta={{ text: "Get Started", href: "/contact" }}
    secondaryCta={{ text: "Request Info", href: "/request-info" }}
    background="gradient"
  />

  <!-- Main Value Prop -->
  <Section
    title="We take care of your membership billing,"
    titleHighlight="so you don't have to."
    subtitle="Focus on your members while our team handles the billing headaches."
    background="white"
  >
    <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-6">What We Handle</h3>
        <ul class="space-y-4">
          {whatWeHandle.map((item) => (
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-gray-700">{item}</span>
            </li>
          ))}
        </ul>
      </div>
      <div class="relative">
        <div class="aspect-video rounded-2xl bg-gradient-to-br from-primary-50 to-primary-100 flex items-center justify-center shadow-xl">
          <div class="text-center p-8">
            <div class="w-20 h-20 mx-auto bg-primary-600 rounded-2xl flex items-center justify-center mb-4">
              <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-primary-800 font-medium">Billing Dashboard</p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Features Grid -->
  <Section
    title="Proprietary Payment Technology +"
    titleHighlight="A Team of Billing All-Stars"
    subtitle="The best of both worlds: powerful automation backed by experienced professionals."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {billingFeatures.map((feature) => (
        <IconBox
          icon={feature.icon}
          title={feature.title}
          description={feature.description}
          variant="card"
        />
      ))}
    </div>
  </Section>

  <!-- Delinquency Management -->
  <Section
    title="Delinquency Management Program"
    titleHighlight=""
    subtitle="Our proven process recovers more of your past-due accounts."
    background="white"
  >
    <div class="grid gap-8 lg:grid-cols-3">
      <div class="bg-white rounded-xl p-8 border border-gray-200 shadow-lg">
        <div class="w-12 h-12 rounded-lg bg-primary-100 flex items-center justify-center mb-4">
          <span class="text-primary-600 font-bold text-xl">1</span>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">Automatic Retry</h3>
        <p class="text-gray-600">Failed payments are automatically retried on optimal days to maximize recovery rates.</p>
      </div>
      <div class="bg-white rounded-xl p-8 border border-gray-200 shadow-lg">
        <div class="w-12 h-12 rounded-lg bg-primary-100 flex items-center justify-center mb-4">
          <span class="text-primary-600 font-bold text-xl">2</span>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">Personal Outreach</h3>
        <p class="text-gray-600">Our team contacts delinquent members with professional, friendly communication.</p>
      </div>
      <div class="bg-white rounded-xl p-8 border border-gray-200 shadow-lg">
        <div class="w-12 h-12 rounded-lg bg-primary-100 flex items-center justify-center mb-4">
          <span class="text-primary-600 font-bold text-xl">3</span>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">Payment Recovery</h3>
        <p class="text-gray-600">We work with members to resolve issues and get accounts back in good standing.</p>
      </div>
    </div>
  </Section>

  <!-- Stats -->
  <TrustBadges
    title="Billing Experts Working on Your Behalf"
    stats={stats}
    background="dark"
  />

  <!-- Integration Section -->
  <Section
    title="Business Management Software"
    titleHighlight="Integrated with Full-Service Billing"
    subtitle="Our billing services work seamlessly with Member Manager software for a complete solution."
    background="white"
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <div class="text-center p-6">
        <div class="w-16 h-16 mx-auto rounded-xl bg-primary-50 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900">Member Database</h3>
        <p class="mt-2 text-sm text-gray-600">Centralized member information</p>
      </div>
      <div class="text-center p-6">
        <div class="w-16 h-16 mx-auto rounded-xl bg-primary-50 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900">Class Scheduling</h3>
        <p class="mt-2 text-sm text-gray-600">Online booking for members</p>
      </div>
      <div class="text-center p-6">
        <div class="w-16 h-16 mx-auto rounded-xl bg-primary-50 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900">Reports & Analytics</h3>
        <p class="mt-2 text-sm text-gray-600">Insights at your fingertips</p>
      </div>
      <div class="text-center p-6">
        <div class="w-16 h-16 mx-auto rounded-xl bg-primary-50 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900">Mobile Access</h3>
        <p class="mt-2 text-sm text-gray-600">Manage on the go</p>
      </div>
    </div>

    <div class="mt-12 text-center">
      <a
        href="/member-management-software"
        class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700"
      >
        Learn about Member Management Software
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to Simplify Your Billing?"
    description="Join thousands of studios who trust Member Solutions with their membership billing."
    primaryButton={{ text: "Get Started", href: "/contact" }}
    secondaryButton={{ text: "Request Information", href: "/request-info" }}
    background="gradient"
  />
</Layout>
