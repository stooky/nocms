---
interface Props {
  icon: string;
  title: string;
  description: string;
  variant?: 'default' | 'card' | 'centered' | 'horizontal';
  iconColor?: string;
}

const {
  icon,
  title,
  description,
  variant = 'default',
  iconColor = 'text-primary-600',
} = Astro.props;

const variantClasses = {
  default: 'text-left',
  card: 'text-left p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow',
  centered: 'text-center items-center',
  horizontal: 'flex items-start gap-4 text-left',
};
---

<div class={`${variantClasses[variant]}`}>
  {variant === 'horizontal' ? (
    <>
      <div class={`flex-shrink-0 w-12 h-12 rounded-lg bg-primary-50 flex items-center justify-center ${iconColor}`}>
        <Fragment set:html={icon} />
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
        <p class="mt-2 text-gray-600">{description}</p>
      </div>
    </>
  ) : (
    <>
      <div class={`inline-flex w-14 h-14 rounded-xl bg-primary-50 items-center justify-center ${iconColor} ${variant === 'centered' ? 'mx-auto' : ''}`}>
        <Fragment set:html={icon} />
      </div>
      <h3 class="mt-5 text-xl font-semibold text-gray-900">{title}</h3>
      <p class="mt-3 text-gray-600">{description}</p>
    </>
  )}
</div>
